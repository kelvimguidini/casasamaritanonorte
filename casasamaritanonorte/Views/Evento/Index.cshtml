@model IEnumerable<casasamaritanonorte.ViewModels.EventoViewModels>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
    ViewBag.Title = "Eventos";
}



<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area">
    <div class="ht__bradcaump__container">
        <img src="~/Imagens/6.png" alt="bradcaump images">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="bradcaump__inner text-center">
                        <h2 class="bradcaump-title">Eventos</h2>
                        <nav class="bradcaump-inner">
                            <a class="breadcrumb-item" href="@Url.Action("Index", "Home")">Início</a>
                            <span class="brd-separetor"><img src="~/Imagens/brad.png" alt="separator images"></span>
                            <span class="breadcrumb-item active">Eventos</span>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->

<!-- Start Our Event Area -->
<section class="dcare__event__area bg--white section-padding--lg">
    <div class="container">

        <div class="row event-grid-page">

            @foreach (var item in Model)
            {
                <!-- Start Single Event -->
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="event__list">
                        <div class="event__thumb">
                            <a href="@Url.Action("Details", "Evento", new { Id = item.ID})">
                                @if (@item.CaminhoCapa != "")
                                {
                                <img src="~/Imagens/Uploads/Eventos/@item.CaminhoCapa" alt="Evento imagem">
                            }
                            </a>
                        </div>
                        <div class="event__content">
                            <div class="event__pub">
                                <div class="event__date">
                                    <span>publicação </span><span class="date">@item.ID</span>
                                </div>
                                <ul class="event__time">
                                    <li><i class="fa fa-clock-o"></i>@item.DataEvento.ToString("dd/MM/yyyy")</li>
                                </ul>
                            </div>
                            <div class="event__inner">
                                <h2><a href="@Url.Action("Details", "Evento", new { Id = item.ID})">@item.Titulo</a></h2>
                                <p>@item.Caption</p>
                            </div>
                            <ul class="event__btn">
                                <li><a href="@Url.Action("Details", "Evento", new { Id = item.ID})">Ver Mais</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            }

        </div>
       
    </div>
</section>
<!-- End Our Event Area -->